class Solution {
    public String longestCommonPrefix(String[] strs) {
        if (strs == null || strs.length == 0) {
            return "";
        }
        Arrays.sort(strs);

        String fstr = strs[0];
        String lstr = strs[strs.length - 1];
        StringBuilder compre = new StringBuilder();
        int m = Math.min(fstr.length(),lstr.length());
        for (int i = 0; i < m; i++) {
            // If the characters at the current position do not match, the common prefix ends here.
            if (fstr.charAt(i) != lstr.charAt(i)) {
                break;
            }
            // If they match, append the character to our result.
            compre.append(fstr.charAt(i));
        }

        // Return the final prefix string.
        return compre.toString();
    }
}
